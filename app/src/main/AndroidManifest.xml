<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.ikmr.banbara23.yaeyama_liner_checker"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.TopActivity"
            android:label="@string/title_activity_top">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.StatusListActivity"
            android:label="@string/title_activity_status_list">
        </activity>
        <activity
            android:name=".activity.StatusDetailActivity"
            android:label="@string/title_activity_status_detail">
        </activity>
    </application>

</manifest>
