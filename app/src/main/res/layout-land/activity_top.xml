<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/activity_top_liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-10dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.ikmr.banbara23.yaeyama_liner_checker.activity.TopActivity">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#E6855E"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp">

                    <!--運航情報を見るラベル-->
                    <TextView
                        android:id="@+id/activity_top_description"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_directions_boat_white_24dp"
                        android:drawablePadding="16dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="運航情報を見る"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </android.support.v7.widget.CardView>
                <!--運航情報-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!--安栄-->
                    <Button
                        android:id="@+id/top_activity_annei"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/company_name_annei"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />

                    <!--八重山観光フェリー-->
                    <Button
                        android:id="@+id/top_activity_ykf"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="center|center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/company_name_ykf"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />

                    <!--ドリーム観光-->
                    <Button
                        android:id="@+id/top_activity_dream"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_gravity="left"
                        android:gravity="center|center_vertical"
                        android:paddingLeft="16dp"
                        android:text="@string/company_name_dream"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_top_liner"
            android:orientation="horizontal"
            android:weightSum="2">
            <!--時刻表-->
            <android.support.v7.widget.CardView
                android:id="@+id/top_activity_timetable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:longClickable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="時刻表"
                    android:textColor="@color/secondary_text"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>

            <!--設定-->
            <android.support.v7.widget.CardView
                android:id="@+id/top_activity_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:longClickable="true"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/ic_settings_black_24dp"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:text="設定"
                    android:textColor="@color/secondary_text"
                    android:textSize="15sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/activity_bottom_view"
        android:layout_alignParentBottom="true"
        android:background="#007AB7"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <ImageView
        android:id="@+id/activity_bottom_ship_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_bottom_view"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ship" />

    <com.daasuu.bl.BubbleLayout
        android:id="@+id/activity_top_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/activity_bottom_view"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="-30dp"
        android:layout_toRightOf="@+id/activity_bottom_ship_image"
        android:padding="8dp"
        app:bl_arrowDirection="left"
        app:bl_arrowHeight="8dp"
        app:bl_arrowPosition="20dp"
        app:bl_arrowWidth="8dp"
        app:bl_strokeColor="@color/white"
        app:bl_cornersRadius="30dp"
        app:bl_strokeWidth="1dp"
        >

        <TextView
            android:id="@+id/activity_top_weather_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="天気"
            />

    </com.daasuu.bl.BubbleLayout>
</RelativeLayout>