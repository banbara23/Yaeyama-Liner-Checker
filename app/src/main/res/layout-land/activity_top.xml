                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:src="@drawable/ic_directions_boat_white_24dp"-->
                    <!--/>-->
                    <!--</FrameLayout>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="ドリーム観光"
                        android:textColor="@color/secondary_text"
                        android:textSize="15sp"
                        />
                    <!--</LinearLayout>-->

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_top_liner"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <!--時刻表-->
        <android.support.v7.widget.CardView
            android:id="@+id/top_activity_timetable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:longClickable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:text="時刻表"
                android:textColor="@color/secondary_text"
                android:textSize="15sp"
                />
        </android.support.v7.widget.CardView>

        <!--設定-->
        <android.support.v7.widget.CardView
            android:id="@+id/top_activity_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:longClickable="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:drawableLeft="@drawable/ic_settings_black_24dp"
                android:drawablePadding="16dp"
                android:gravity="center_vertical"
                android:text="設定"
                android:textColor="@color/secondary_text"
                android:textSize="15sp"
                />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#007AB7"
        />

    <ImageView
        android:id="@+id/activity_bottom_ship_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activity_top_liner"
        android:layout_alignStart="@+id/activity_top_liner"
        android:layout_alignTop="@+id/activity_bottom_toolbar"
        android:layout_marginTop="-30dp"
        android:src="@drawable/ship"
        android:visibility="gone"
        />
</RelativeLayout>