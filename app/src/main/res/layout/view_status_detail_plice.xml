<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <!--ヘッダー-->
        <LinearLayout
            android:id="@+id/view_status_detail_top_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            >

            <!--ヘッダー文字-->
            <TextView
                android:id="@+id/view_status_detail_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:textColor="@color/background_material_dark"
                android:textSize="16sp"
                tools:text="料金"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                />
        </LinearLayout>

        <!--内容-->
        <LinearLayout
            android:id="@+id/view_status_detail_top_status_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_status_detail_top_status_layout"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:weightSum="3"
            >

            <!--大人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="大人"
                    />

                <TextView
                    android:id="@+id/view_status_detail_adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="片道 3,090円\n往復 5,870円"
                    />
            </LinearLayout>

            <!--子ども-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="子ども"
                    />

                <TextView
                    android:id="@+id/view_status_detail_top_child"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="片道 1,540円\n往復 2,930円"
                    />

            </LinearLayout>

            <!--障害者-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="障害者"
                    />

                <TextView
                    android:id="@+id/view_status_detail_handicapped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/background_material_dark"
                    android:textSize="16sp"
                    tools:text="片道 1,550円"
                    />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>