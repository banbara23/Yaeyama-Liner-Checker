<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--時刻表-->
    <!--時刻表 １列目-->
    <FrameLayout
        android:id="@+id/hateruma_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/time_table_anei_icon_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="08:30"/>

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="09:50"/>
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->


    <!--時刻表 ２列目-->
    <FrameLayout
        android:id="@+id/hateruma_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/time_table_anei_icon_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="11:50"/>

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="13:10"/>
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--時刻表 ３列目-->
    <FrameLayout
        android:id="@+id/hateruma_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/time_table_anei_icon_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="15:30"/>

            <TextView
                style="@style/time_table_text"
                android:layout_weight="1"
                android:text="16:50"/>
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <include layout="@layout/view_time_table_line_yoko"/>
    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

</LinearLayout>