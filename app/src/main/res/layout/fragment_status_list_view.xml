<?xml version="1.0" encoding="utf-8"?>
<com.ikmr.banbara23.yaeyama_liner_checker.view.StatusListView xmlns:android="http://schemas.android.com/apk/res/android"
                                                              android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              android:layout_marginLeft="10dp"
                                                              android:orientation="horizontal"
                                                              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_status_list_port_text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:text="西表(上原)"
            android:textColor="@color/background_material_dark"
            android:textSize="20dp"/>


        <FrameLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_status_list_status_normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="○"
                android:textColor="#4169e1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/view_status_list_status_cation_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="△"
                android:textColor="#ffa500"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/view_status_list_status_cancel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="×"
                android:textColor="#ff0000"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/view_status_list_comment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="正常運航"
            android:textColor="@color/background_material_dark"
            android:textSize="20dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center|right"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/list_arrow"/>

</com.ikmr.banbara23.yaeyama_liner_checker.view.StatusListView>