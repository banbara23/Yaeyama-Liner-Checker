<?xml version="1.0" encoding="utf-8"?>
<com.ikmr.banbara23.yaeyama_liner_checker.view.StatusListView xmlns:android="http://schemas.android.com/apk/res/android"
                                                              xmlns:tools="http://schemas.android.com/tools"
                                                              android:layout_width="match_parent"
                                                              android:layout_height="wrap_content"
                                                              android:orientation="horizontal"
                                                              android:padding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <FrameLayout
            android:id="@+id/view_status_list_status_layout"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            >

            <TextView
                android:id="@+id/view_status_list_status_icon_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="○"
                android:textColor="#4169e1"
                android:textSize="25sp"
                android:textStyle="bold"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/view_status_list_status_layout"
            android:layout_toRightOf="@+id/view_status_list_status_layout"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/view_status_list_port_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="14sp"
                tools:text="竹富"
                />

            <TextView
                android:id="@+id/view_status_list_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingTop="2dp"
                android:textColor="@color/text_description"
                android:textSize="14sp"
                tools:text="通常運航"
                />
        </LinearLayout>
    </RelativeLayout>

</com.ikmr.banbara23.yaeyama_liner_checker.view.StatusListView>