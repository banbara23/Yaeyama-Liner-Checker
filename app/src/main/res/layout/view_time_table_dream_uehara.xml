<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--ヘッダー-->
    <LinearLayout
        android:id="@+id/view_dream_timetable_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            android:id="@+id/view_dream_timetable_header_ishigaki"
            style="@style/time_table_body_text"
            android:layout_weight="1"
            android:text="@string/time_table_port_ishigaki"
            />

        <TextView
            android:id="@+id/view_dream_timetable_header_ritou"
            style="@style/time_table_body_text"
            android:layout_weight="1"
            android:text="鳩間着"
            />
    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~１列目 安栄~~~~~~~~~~~~~~~~~~~~~~~ -->
    <FrameLayout
        android:id="@+id/uehara_anei_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/view_time_table_dream_uehara_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:text="08:00"
                    android:textSize="20dp"
                    />

                <TextView
                    style="@style/time_table_caution_text"
                    android:layout_toEndOf="@+id/view_time_table_dream_uehara_text1"
                    android:layout_toRightOf="@+id/view_time_table_dream_uehara_text1"
                    android:background="@drawable/corner_round"
                    android:text="Ｆ"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/view_time_table_dream_uehara_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:text="08:55"
                    android:textSize="20dp"
                    />

                <TextView
                    style="@style/time_table_caution_text"
                    android:layout_toEndOf="@+id/view_time_table_dream_uehara_text2"
                    android:layout_toRightOf="@+id/view_time_table_dream_uehara_text2"
                    android:background="@drawable/corner_round"
                    android:text="Ｆ"
                    />

            </RelativeLayout>

        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~２列目 安栄~~~~~~~~~~~~~~~~~~~~~~~ -->
    <!--ヘッダー-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            style="@style/time_table_body_text"
            android:layout_weight="1"
            android:text="鳩間発"
            />

        <TextView
            style="@style/time_table_body_text"
            android:layout_weight="1"
            android:text="上原着"
            />
    </LinearLayout>

