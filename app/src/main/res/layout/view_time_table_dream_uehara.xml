    <include layout="@layout/view_time_table_line_yoko"/>

    <!--カーフェリー説明-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

        <TextView
            android:id="@+id/view_time_table_dream_uehara_description"
            style="@style/time_table_caution_text"
            android:background="@drawable/corner_round"
            android:text="Ｆ"
            />

        <TextView
            style="@style/time_table_caution_description_text"
            android:layout_toRightOf="@+id/view_time_table_dream_uehara_description"
            android:text="高速カーフェリー 月 木 土運航運航"
            />
    </RelativeLayout>
</LinearLayout>