                    android:layout_centerHorizontal="true"
                    android:layout_margin="1dp"
                    android:text="10:50"
                    android:textSize="20dp"
                    />

                <TextView
                    style="@style/time_table_caution_text"
                    android:layout_toEndOf="@+id/view_time_table_dream_uehara_text7"
