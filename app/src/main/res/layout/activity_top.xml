<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_background"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/activity_top_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.ikmr.banbara23.yaeyama_liner_checker.activity.TopActivity"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#E6855E"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                >

                <!--運航情報を見るラベル-->
                <TextView
                    android:id="@+id/activity_top_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:drawableLeft="@drawable/ic_directions_boat_white_24dp"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="運航情報を見る"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />
            </android.support.v7.widget.CardView>
            <!--運航情報-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >

                <!--安栄-->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/top_activity_annei"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:mrl_rippleColor="#ff6666"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:text="安栄観光"
                            android:textColor="@color/secondary_text"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/background"
                    />

                <!--八重山観光フェリー-->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/top_activity_ykf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:mrl_rippleColor="#87ceeb"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:text="八重山観光フェリー"
                            android:textColor="@color/secondary_text"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/background"
                    />

                <!--ドリーム観光-->
                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/top_activity_dream"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:mrl_rippleColor="#ff9900"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="16dp"
                            android:text="ドリーム観光"
                            android:textColor="@color/secondary_text"
                            android:textSize="15sp"
                            />
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <!--時刻表-->
    <android.support.v7.widget.CardView
        android:id="@+id/top_activity_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_top_liner"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:longClickable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="時刻表"
            android:textColor="@color/secondary_text"
            android:textSize="15sp"
            />
    </android.support.v7.widget.CardView>

    <!--設定-->
    <android.support.v7.widget.CardView
        android:id="@+id/top_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_activity_timetable"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:longClickable="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >

        <!--時刻表-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="設定"
            android:textColor="@color/secondary_text"
            android:textSize="15sp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#007AB7"
        />
</RelativeLayout>