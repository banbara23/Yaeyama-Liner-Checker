<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.ikmr.banbara23.yaeyama_liner_checker.activity.TopActivity"
    >

    <TextView
        android:id="@+id/activity_top_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/top_description"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/annei_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_top_description"
        android:onClick="anneiClick"
        android:text="@string/company_name_annei"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/ykf_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/annei_button"
        android:layout_marginTop="10dp"
        android:onClick="ykfClick"
        android:text="@string/company_name_ykf"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/dream_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ykf_button"
        android:layout_marginTop="10dp"
        android:onClick="dreamClick"
        android:text="@string/company_name_dream"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/activity_top_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dream_button"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/top_other"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/timetable_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_top_other"
        android:onClick="timeTableClick"
        android:text="時刻表"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/timetable_button"
        android:layout_marginTop="10dp"
        android:onClick="otherClick"
        android:text="@string/title_activity_other"
        android:textSize="18sp"
        />

</RelativeLayout>
