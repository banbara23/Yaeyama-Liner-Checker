<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <!--プログレスバー-->
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/fragment_status_detail_progressbar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        tools:visibility="gone"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true"
        />

    <!--読み込みエラー時の再読み込みボタン-->
    <Button
        android:id="@+id/fragment_status_detail_reload_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:text="再読み込み"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/fragment_status_detail_value_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            >

            <!--ステータス-->
            <com.ikmr.banbara23.yaeyama_liner_checker.view.StatusDetailTopView
                android:id="@+id/fragment_status_detail_top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                />

            <!--時刻表-->
            <com.ikmr.banbara23.yaeyama_liner_checker.timetable.annei.AnneiTimeTableView
                android:id="@+id/fragment_time_table_annei_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                />

            <!--時間と距離-->
            <com.ikmr.banbara23.yaeyama_liner_checker.view.StatusDetailDistanceAndTimeView
                android:id="@+id/fragment_status_detail_distance_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                />

            <!--料金-->
            <com.ikmr.banbara23.yaeyama_liner_checker.view.StatusDetailPriceHandicappedView
                android:id="@+id/fragment_status_detail_price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                />

            <!--ブラウザで見る、電話ボタン-->
            <include
                layout="@layout/view_status_detail_action_box"/>

            <!--広告-->
            <!--<com.ikmr.banbara23.yaeyama_liner_checker.view.StatusDetailAdView-->
            <!--android:id="@+id/fragment_status_detail_annei_ad_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:descendantFocusability="blocksDescendants"-->
            <!--/>-->
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/status_detail_view_outer_space"
                android:layout_marginStart="@dimen/status_detail_view_outer_space"
                android:layout_marginTop="4dp"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_ad_unit_id"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
