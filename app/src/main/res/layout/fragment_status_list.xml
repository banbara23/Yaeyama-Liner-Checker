<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/fragment_status_list_header_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/status_list_info_margin"
            android:layout_marginRight="@dimen/status_list_info_margin"
            android:layout_marginTop="@dimen/status_list_info_margin"
            android:visibility="gone"
            card_view:cardCornerRadius="3dp"
            tools:visibility="visible">

            <!--ヘッダー情報-->
            <LinearLayout
                android:id="@+id/fragment_status_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_primary_color"
                android:orientation="vertical"
                android:padding="5dp">

                <!--タイトル-->
                <TextView
                    android:id="@+id/fragment_status_list_toolbar_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:drawablePadding="5dp"
                    android:lineSpacingExtra="2dp"
                    android:text="title"
                    android:textColor="@color/secondary_text"
                    android:textSize="15dp"/>

                <!--更新時刻-->
                <TextView
                    android:id="@+id/fragment_status_list_toolbar_update_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="yyyy/MM/dd hh:mm:ss更新"
                    android:textColor="@color/secondary_text"
                    android:textSize="13dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <!--リスト-->
        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="@id/fragment_status_list_header_card_view"
            android:layout_below="@+id/fragment_status_list_header_card_view"/>

    </RelativeLayout>

