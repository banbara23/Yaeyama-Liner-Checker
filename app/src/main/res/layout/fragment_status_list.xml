<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ヘッダー情報-->
        <LinearLayout
            android:id="@+id/fragment_status_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ripple_material_light"
            android:orientation="vertical"
            android:padding="13dp"
            android:visibility="gone">

            <!--更新時刻-->
            <TextView
                android:id="@+id/fragment_status_list_toolbar_update_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="yyyy/MM/dd hh:mm:ss更新"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <!--タイトル-->
            <TextView
                android:id="@+id/fragment_status_list_toolbar_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:text="title"
                android:textSize="18dp"/>

        </LinearLayout>

        <!--リスト-->
        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="@id/fragment_status_list_header"
            android:layout_below="@+id/fragment_status_list_header"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <!--プログレス-->
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</FrameLayout>