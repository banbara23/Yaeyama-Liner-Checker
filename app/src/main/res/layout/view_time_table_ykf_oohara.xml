<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <!--ヘッダー-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <TextView
            style="@style/time_table_header_text"
            android:layout_weight="1"
            android:text="@string/time_table_port_ishigaki"
            android:textStyle="bold"
            />

        <TextView
            style="@style/time_table_header_text"
            android:layout_weight="1"
            android:text="@string/time_table_port_oohara"
            android:textStyle="bold"
            />
    </LinearLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--1列目-->
    <FrameLayout
        android:id="@+id/oohara_ykf_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="08:15"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="10:00"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--2列目-->
    <FrameLayout
        android:id="@+id/oohara_ykf_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="09:45"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="12:30(小)"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--3列目-->
    <FrameLayout
        android:id="@+id/oohara_anei_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="12:30"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="13:25(竹)"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--4列目-->
    <FrameLayout
        android:id="@+id/oohara_ykf_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="14:30"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="15:25"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--5列目-->
    <FrameLayout
        android:id="@+id/oohara_anei_row5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:background="@color/time_table_car_ferry"
                android:text="15:40"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:background="@color/time_table_car_ferry"
                android:text="17:00"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <!-- ~~~~~~~~~~~~~~~~~~~~~~~区切り~~~~~~~~~~~~~~~~~~~~~~~ -->

    <!--6列目-->
    <FrameLayout
        android:id="@+id/oohara_anei_row6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="16:30"
                />

            <TextView
                style="@style/time_table_header_text"
                android:layout_weight="1"
                android:text="17:20"
                />
        </LinearLayout>

        <include layout="@layout/view_time_table_line_yoko"/>
    </FrameLayout>

    <include layout="@layout/view_time_table_line_yoko"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >
        <!--カーフェリー説明-->
        <TextView
            android:id="@+id/description_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="■"
            android:textColor="@color/time_table_car_ferry"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/description_color"
            android:layout_toRightOf="@+id/description_color"
            android:text="高速ｶｰﾌｪﾘｰ 月 木 土運航"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="(竹) 竹富経由"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="(小) 小浜経由"
        />

</LinearLayout>