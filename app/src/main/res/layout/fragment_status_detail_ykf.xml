<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:visibility="visible"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <LinearLayout
                android:id="@+id/fragment_status_detail_content_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <!--プログレスバー-->
                <ProgressBar
                    android:id="@+id/fragment_status_detail_progressbar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="24dp"
                    />

                <!--読み込みエラーメッセージ-->
                <Button
                    android:id="@+id/fragment_status_detail_reload_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="24dp"
                    android:text="再読み込み"
                    android:visibility="gone"
                    />

                <!--運航状況の説明-->
                <com.ikmr.banbara23.yaeyama_liner_checker.view.StatusDetailTextView
                    android:id="@+id/fragment_ykf_status_detail_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <!--時刻表-->
                <com.ikmr.banbara23.yaeyama_liner_checker.timetable.ykf.YkfTimeTableView
                    android:id="@+id/fragment_time_table_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/view_action_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            tools:visibility="visible"
            />
    </LinearLayout>
