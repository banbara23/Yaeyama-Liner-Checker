<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:padding="4dp"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/view_status_detail_top_status"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:textColor="@color/status_normal"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="○"
            />

        <TextView
            android:id="@+id/view_status_detail_top_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/view_status_detail_top_status"
            android:layout_toRightOf="@+id/view_status_detail_top_status"
            android:textColor="@color/background_material_dark"
            android:textSize="16sp"
            tools:text="大原(西表)"
            />

        <TextView
            android:id="@+id/view_status_detail_top_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/view_status_detail_top_port"
            android:layout_alignRight="@+id/view_status_detail_top_port"
            android:layout_alignTop="@+id/view_status_detail_top_status"
            android:layout_marginRight="4dp"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="2015年12月24日 06:00時点"
            />

        <TextView
            android:id="@+id/view_status_detail_top_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view_status_detail_top_port"
            android:layout_alignStart="@+id/view_status_detail_top_port"
            android:layout_below="@+id/view_status_detail_top_port"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:textColor="@color/background_material_dark"
            android:textSize="16sp"
            tools:text="通常運航"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>