<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:padding="8dp"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:id="@+id/view_status_detail_top_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <!--ステータスアイコン-->
            <TextView
                android:id="@+id/view_status_detail_top_status"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:textColor="@color/status_normal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="○"
                />

            <!--ステータス文字-->
            <TextView
                android:id="@+id/view_status_detail_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:textColor="@color/background_material_dark"
                android:textSize="16sp"
                tools:text="通常運航"
                />
        </LinearLayout>

        <!--区切り横線-->
        <FrameLayout
            android:id="@+id/view_status_detail_top_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/view_status_detail_top_status_layout"
            android:background="@color/light_grey"
            />

        <!--更新日時-->
        <TextView
            android:id="@+id/view_status_detail_top_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/view_status_detail_top_line"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textStyle="bold"
            tools:text="2015年12月24日 06:00時点"
            />

        <!--コメント（安栄のみ）-->
        <TextView
            android:id="@+id/view_status_detail_top_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_status_detail_top_update_text"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:textColor="@color/background_material_dark"
            android:textSize="16sp"
            tools:text="通常運航"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>