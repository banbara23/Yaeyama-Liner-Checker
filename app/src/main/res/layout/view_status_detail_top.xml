<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="@dimen/status_detail_view_outer_space"
    android:layout_marginRight="@dimen/status_detail_view_outer_space"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/status_detail_view_inner_space"
        android:paddingRight="@dimen/status_detail_view_inner_space"
        >

        <LinearLayout
            android:id="@+id/view_status_detail_top_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/status_detail_view_outer_space"
            android:layout_marginRight="@dimen/status_detail_view_outer_space"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            >

            <!--ステータスアイコン-->
            <TextView
                android:id="@+id/view_status_detail_top_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/status_normal"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="○"
                />

            <!--ステータス文字-->
            <TextView
                android:id="@+id/view_status_detail_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                tools:text="通常運航"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_status_detail_top_status_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            >
            <!--区切り横線-->
            <FrameLayout
                android:id="@+id/view_status_detail_top_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                />

            <!--更新日時-->
            <TextView
                android:id="@+id/view_status_detail_top_update_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/light_grey"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="2015年12月24日 06:00時点"
                />

            <!--コメント（安栄のみ）-->
            <TextView
                android:id="@+id/view_status_detail_top_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:maxLines="5"
                android:visibility="gone"
                tools:text="通常運航通"
                />

            <Button
                android:id="@+id/view_status_detail_top_comment_more_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="もっと見る"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>